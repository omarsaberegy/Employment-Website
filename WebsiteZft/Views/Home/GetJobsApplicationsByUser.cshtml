@model IEnumerable<WebsiteZft.Models.ApplyforJob>

@{
    ViewBag.Title = "GetJobsApplicationsByUser";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>The Jobs you Applied for </h2>


<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.job.JobName)
        </th>
       
        <th>
            @Html.DisplayNameFor(model => model.Message)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CV)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ApplyDate)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.job.JobName)
        </td>
       
        <td>
            @Html.DisplayFor(modelItem => item.Message)
        </td>

        <td>
            <a href="@(Url.Content("~/Uploads/"+item.CV))">@item.CV</a>
        </td>

        <td>
            @Html.DisplayFor(modelItem => item.ApplyDate)
        </td>
        <td>
            @Html.ActionLink("Edit", "EditJobApplication", new { id = item.Id }) |
            @Html.ActionLink("Details", "DetailsofJobApplication", new { id = item.Id }) |
            @Html.ActionLink("Delete", "DeleteJobApplication", new { id = item.Id })
        </td>
    </tr>
}

</table>


