@model IEnumerable<WebsiteZft.Models.Job>

@{
    ViewBag.Title = "ShA8LnI";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 style="color:#428bca">All the Jobs you Published </h2>
<br/>
<div class="row">
    <div class="col-md-3">
        <p class="btn btn-info" >
            <a href="~/Job/Create" style="color:white">Add a New Job Apportunity</a>
     
        </p>
    </div>
    <div class="col-md-3">
        <p class="btn btn-info">

            <a href="~/Job/DisplayPublisherJobs" style="color:white">View Jobs that have applicants</a>

            



        </p>
    </div>

</div>
<br/>
<table class="table table-striped table-hover" >
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Category.CategoryName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.JobName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.JobImage)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.JobContent)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Category.CategoryName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.JobName)
        </td>
        <td>
            <img src="~/Uploads/@Html.DisplayFor(modelItem => item.JobImage)"
                 class="thumbnail" style="width:48px; height:48px" />
        </td>
        <td>
            @*@Html.DisplayFor(modelItem => item.JobContent)*@
            @Html.Raw(HttpUtility.HtmlDecode(Html.DisplayFor(modelItem => item.JobContent).ToString()))
       
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
